## Makefile.common
## ======================================================================

PACKAGE_NAME=		@PACKAGE_NAME@
PACKAGE_VERSION=	@PACKAGE_VERSION@

## Path
## ----------------------------------------------------------------------

INSTALL_ROOT=		$(DESTDIR)

package_subdir=		@package_subdir@

prefix=			@prefix@
exec_prefix=		@exec_prefix@
bindir=			@bindir@
sbindir=		@sbindir@
libdir=			@libdir@
libexecdir=		@libexecdir@$(package_subdir)
sysconfdir=		@sysconfdir@$(package_subdir)
localstatedir=		@localstatedir@
datadir=		@datadir@$(package_subdir)
datarootdir=		@datarootdir@$(package_subdir)
mandir=			@mandir@
infodir=		@infodir@
docdir=			@docdir@

vardir=			$(localstatedir)/lib$(package_subdir)
rundir=			$(localstatedir)/run$(package_subdir)
logdir=			$(localstatedir)/log$(package_subdir)

## Commands, Flags and so on
## ----------------------------------------------------------------------

CC=			@CC@
CPPFLAGS=		@CPPFLAGS@
CFLAGS=			@CFLAGS@

CP=			cp -p
RM=			rm -rf
LN_S=			ln -s
INSTALL=		$(SOURCE_BUILD)/install-sh -c
CHMOD_FILES=		chmod 0644
CHMOD_EXES=		chmod 0755

## Package local
## ----------------------------------------------------------------------

include $(SOURCE_BUILD)/Makefile.package

## Suffix rules
## ======================================================================

.SUFFIXES: .subst .substed
.SUFFIXES: .sh .ksh .rb .rbt .pl .php .pm .exe .cgi .tmpl .default .example

.subst.substed:
	@echo "Building $@ from $< ..."
	@$(RM) $@ $@.tmp
	@$(SOURCE_BUILD)/subst <$< >$@.tmp
	@$(CHMOD_FILES) $@.tmp
	@mv $@.tmp $@

.sh.exe:
