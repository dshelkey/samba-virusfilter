## Makefile.package
## ======================================================================

CC=			$(SAMBA_CC)
CPPFLAGS=		$(VIRUSFILTER_CPPFLAGS) $(SAMBA_CPPFLAGS)
CFLAGS=			$(VIRUSFILTER_CFLAGS)

FLAGS=			$(SAMBA_FLAGS)
PICFLAG=		$(SAMBA_PICFLAG)
SHLD=			$(SAMBA_SHLD)
LDSHFLAGS=		$(SAMBA_LDSHFLAGS)
LDSHFLAGS_MODULES=	$(SAMBA_LDSHFLAGS_MODULES)

LIBDIR=			$(SAMBA_LIBDIR)
MODULESDIR=		$(SAMBA_MODULESDIR)

LIB_PATH_VAR=		$(SAMBA_LIB_PATH_VAR)

## ======================================================================

srcdir=			$(SAMBA_SOURCE_DIR)

SAMBA_TOP_DIR=		@SAMBA_TOP_DIR@
SAMBA_SOURCE_DIR=	@SAMBA_SOURCE_DIR@
SAMBA_VERSION=		@SAMBA_VERSION@
SAMBA_VERSION_NUMBER=	@SAMBA_VERSION_NUMBER@
SAMBA_CC=		@SAMBA_CC@
SAMBA_FLAGS=		@SAMBA_FLAGS@
SAMBA_CPPFLAGS=		@SAMBA_CPPFLAGS@
SAMBA_CFLAGS=		@SAMBA_CFLAGS@
SAMBA_PICFLAG=		@SAMBA_PICFLAG@
SAMBA_SHLD=		@SAMBA_SHLD@
SAMBA_LDSHFLAGS=	@SAMBA_LDSHFLAGS@
SAMBA_LDSHFLAGS_MODULES=@SAMBA_LDSHFLAGS_MODULES@
SAMBA_LIB_PATH_VAR=	@SAMBA_LIB_PATH_VAR@

SAMBA_prefix=		@SAMBA_prefix@
SAMBA_exec_prefix=	@SAMBA_exec_prefix@
SAMBA_CONFIGDIR=	@SAMBA_CONFIGDIR@
SAMBA_BINDIR=		@SAMBA_BINDIR@
SAMBA_LIBDIR=		@SAMBA_LIBDIR@
SAMBA_DATADIR=		@SAMBA_DATADIR@
SAMBA_MODULESDIR=	@SAMBA_MODULESDIR@
SAMBA_VFSLIBDIR=	@SAMBA_VFSLIBDIR@
SAMBA_LOCKDIR=		@SAMBA_LOCKDIR@

## ======================================================================

VIRUSFILTER_CPPFLAGS=		@CPPFLAGS@ \
			-DVARDIR='"$(SAMBA_LOCKDIR)"' \
			-DSAMBA_VERSION_NUMBER='$(SAMBA_VERSION_NUMBER)'
VIRUSFILTER_CFLAGS=		@CFLAGS@

VIRUSFILTER_COMMON_HEADERS=	$(SOURCE_DIR)/include/virusfilter-common.h
VIRUSFILTER_VFS_HEADERS=	$(SOURCE_DIR)/include/virusfilter-vfs.h \
			$(VIRUSFILTER_COMMON_HEADERS)
VIRUSFILTER_VFS_OBJS=		$(SOURCE_DIR)/utils/virusfilter-utils.o

## ======================================================================

COMPILE_CC = $(CC) $(CFLAGS) $(SAMBA_CFLAGS) $(EXTRA_FLAGS) $(PICFLAG) -c $< -o $@

.c.o:
	$(COMPILE_CC)

